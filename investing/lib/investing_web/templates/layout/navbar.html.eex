<nav class="navbar navbar-dark bg-primary">

  <a class="navbar-brand mb-0 h1" href="/">Market Watcher</a>


  <div class="text-right">
    <%= if logged_in?(@conn) do %>
      <span class="mr-2">Hi, <%= link current_user(@conn).username, to: user_path(@conn, :edit, @conn.assigns.current_user.id), class: "btn btn-primary" %></span>
      <%= link "Logout", to: session_path(@conn, :delete), method: :get, class: "btn btn-secondary" %>
    <% else %>
      <%= link "Login", to: session_path(@conn, :new), class: "btn btn-primary" %>
    <% end %>
  </div>
</nav>
